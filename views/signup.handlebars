<div class="column">
<h2 class="title pb-4 mt-4 ms-2">Create New Account:</h2><hr>
<form class="signup-form">
  <div class="card text-white background-color: rgb(72, 8, 175) mb-3 ms-2" style="max-width: 18rem;">
    <label for="username-signup" class="ms-2">Username:</label>
    <input type="text" id="username-signup" />
  </div>
  <div class="card text-white background-color: rgb(72, 8, 175) mb-3 ms-2" style="max-width: 18rem;">
    <label for="email-signup" class="ms-2">Email:</label>
    <input type="text" id="email-signup" />
  </div>
  <div class="card text-white background-color: rgb(72, 8, 175) mb-3 ms-2" style="max-width: 18rem;">
    <label for="password-signup" class="ms-2">Password:</label>
    <input type="password" id="password-signup" />
  </div>
  <div>
    <button type="submit" class="btn  ms-2 p-1 rounded" style="width: 100px;">Signup</button>
  </div>
</form>
</div>

<!-- javascript file-->
<script src="/javascript/signup.js"></script>